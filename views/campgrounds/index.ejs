<% layout('layout/boilerplate') %>

<div id="map" style="width: 100%; height: 500px" class="border border-dark-subtle mb-3"></div>


    <h1>All Campgrounds</h1>

    <div>
        <a href="/campgrounds/new" class="btn btn-info mb-3">Add Campgrounds &#x2B</a>
    </div>

    <% for(let campground of campgrounds) { %>

        <div class="card mt-3 mt-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length){ %>
                        <a href="/campgrounds/<%=campground._id %>"><img class="img-fluid" src="<%= campground.images[0].url %>"
                        alt=""></a>
                    <% } else { %>
                        <img src="https://res.cloudinary.com/dfcsqxxfx/image/upload/v1691437200/Yelp-Camp/aituzfwbnw25dnuqc7zj.jpg" alt="">
                    <% } %>
                    
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title %>
                        </h5>
                        <p class="card-text">
                            <%=campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campground.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="campgrounds/<%= campground._id %>">
                            <%=campground.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>


<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN%>';
    // error here is just VS code thing, it doesn't effect how it work
    const campgrounds = {features: <%- JSON.stringify(campgrounds)%>}
</script>

<script src="/javascripts/clusterMap.js"></script>